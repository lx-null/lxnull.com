---
import Header from "../components/header/header.astro";
import Footer from "../components/footer.astro";
import Root from "./root.astro";

const { title = "lxnull", meta } = Astro.props;
---

<Root meta={meta}>
  <Header title={title} />
  <div
    class="w-[90vw] max-w-[700px] min-h-[50vh] mx-auto px-4 pt-4 border-foreground border-l-3 border-r-3"
  >
    <slot />
  </div>
  <Footer />
</Root>
